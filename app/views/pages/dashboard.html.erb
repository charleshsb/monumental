<div class="container">
  <div class="row">
    <div  class="col-12">
      <h1>my dashboard</h1>

      <h2>my bookings </h2>
      <br>
      <div class="cards">
        <% @bookings.each do |booking| %>
        <%= link_to(monument_path(booking.monument)) do  %>
            <div class="card-trip " >
              <div style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path booking.monument.photos.first.key %>'); background-size: cover; height: 220px"></div>
              <div class="card-trip-infos-container p-3 ">
                <div class="card-trip-infos p-0">
                  <div>
                    <h3  ><%=booking.monument.title %></h3>
                  </div>
                  <h5 class="card-trip-pricing" ><%= number_with_delimiter(booking.monument.price) %>$</h5>
                </div>
                <h4 class="pt-2"><%= booking.start_date.strftime("From %d-%m-%Y")%> <%= booking.end_date.strftime("to %d-%m-%Y")%></h4>
              </div>

            </div>
          </div>
          <% end %>
        <% end %>
      </div>
<br>
<br>
<br>
    <h2>my monuments </h2>
    <br>
    <div class="cards">
        <% @monuments.each do |monument| %>
        <%= link_to(monument_path(monument)) do  %>
            <div class="card-trip " >
              <div style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path monument.photos.first.key %>'); background-size: cover; height: 220px"></div>
               <div class="card-trip-infos">
                <div>
                  <h3  ><%=monument.title %></h3>
                </div>
                <h5 class="card-trip-pricing" ><%= number_with_delimiter(monument.price) %>$</h5>
            </div>


          </div>
          <% end %>
        <% end %>
      </div>

    </div>
  </div>
</div>

