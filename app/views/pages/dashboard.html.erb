<div class="container">
<h1>Dashboard</h1>

<h2>My bookings</h2>
<ul>
   <div class="cards">
  <% @bookings.each do |booking| %>
    <li ><%= link_to booking.monument.title, monument_path(booking.monument) %></li>
    <div class="card-trip " >
              <!-- <div style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path monument.photos.first.key %>')"></div> -->
              <img src="https://images.unsplash.com/photo-1524492412937-b28074a5d7da?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1502&q=80" >
               <div class="card-trip-infos">
                <div>
                  <h2><%=monument.title %></h2>
                </div>
                <h2 class="card-trip-pricing"><%= monument.price %>$</h2>
            </div>
          </div>
  <% end  %>
</ul>

<h2>My monuments </h2>
<ul>
  <% @monuments.each do |monument| %>
    <li><%= link_to monument.title, monument_path(monument) %></li>
  <% end  %>
</ul>
</div>

