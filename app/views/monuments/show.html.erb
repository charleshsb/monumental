<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @monument.photos.first.key, crop: :fill%>')">
  <div class="title">
    <h1>Rent & Enjoy <%= @monument[:title] %></h1>
    <br>
    <a class="btn btn-flat" href="#">Book now</a>
  </div>

  <div class="calendar">
    <h1>Book your monument</h1>
    <%= simple_form_for [@monument, @booking] do |f| %>
      <%= f.input :start_date, as: :date, html5: true %>
      <%= f.input :end_date, as: :date, html5: true %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>


<div class="container show-info-container">
  <div class="information">
    <div class="description">
      <ul id="list">
        <li><%= @monument.description %></li>
        <br>
        <li>Adress: <%= @monument.address %></li>
        <br>
        <li><%= @monument.price %>$</li>
      </ul>
    </div>
    <div class="carousel-container">
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <% @monument.photos.each do |photo| %>
            <div class="carousel-item <%= "active" if @monument.photos.first == photo %>">
              <!-- <img class="d-block w-100" src="..." alt="First slide"> -->
              <%= cl_image_tag photo.key, class: "d-block w-100" %>
            </div>
          <% end %>
          <!-- <div class="carousel-item">
            <img class="d-block w-100" src="..." alt="Second slide">
          </div>
          <div class="carousel-item">
            <img class="d-block w-100" src="..." alt="Third slide">
          </div> -->
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

    </div>
  </div>
</div>



  <div class="row">
    <div class="col-4 offset-4">

      <%#= cl_image_tag @monument.photo.key, height: 500, width: 600, crop: :fill %>
      <%# @monument.photos.each do |photo| %>
        <%#= cl_image_tag photo.key, height: 500, width: 600, crop: :fill %>
      <%# end %>




      <p><%= link_to "Edit", edit_monument_path(@monument) %></p>
      <p><%= link_to "Delete", monuments_path(@monument), method: :delete, data: { confirm: "Are you sure?" } %></p>
      <p><%= link_to "Back to list", monuments_path  %></p>
    </div>
</div>
