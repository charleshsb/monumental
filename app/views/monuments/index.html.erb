<div class="container">
  <div class="row">
    <div  class="col-12">
      <h1>List of all monuments</h1>
      <div class ="create-btn-container mb-5" >
        <div id="btn-width"><%= link_to "Create a new monument", new_monument_path, class: "btn-secondary" %></div>
      </div>



      <div class="cards">
        <% @monuments.each do |monument| %>
        <%= link_to(monument_path(monument)) do  %>
            <div class="card-trip " >
              <div style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path monument.photos.first.key %>')"></div>
               <div class="card-trip-infos">
                <div>
                  <h2><%=monument.title %></h2>
                </div>
                <h2 class="card-trip-pricing"><%= monument.price %>$</h2>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>



