<div class="container">
  <div class="row">
    <div  class="col-12">
      <h1>All the results that match you</h1>
      <div class ="create-btn-container mb-5" >
        <div id="btn-width"><%= link_to "Publish your monument", new_monument_path, class: "btn-secondary" %></div>
      </div>



      <div class="cards">
        <% @monuments.each do |monument| %>
        <%= link_to(monument_path(monument)) do  %>
            <div class="card-trip " >
              <!-- <div style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.2)), url('<%= cl_image_path monument.photos.first.key %>')"></div> -->
              <img src="https://images.unsplash.com/photo-1524492412937-b28074a5d7da?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1502&q=80" >
               <div class="card-trip-infos">
                <div>
                  <h2><%=monument.title %></h2>
                </div>
                <h2 class="card-trip-pricing"><%= monument.price %>$</h2>
            </div>
          </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>



