<div class="container">
  <div class="row">
    <div class="col-6">
      <h1>List of all monuments</h1>
      <ul>
        <% @monuments.each do |monument| %>
        <%= link_to(monument_path(monument)) do  %>
            <div class="card-trip">
              <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
              <div class="card-trip-infos">
                <div>
                  <h2><%=monument.title %></h2>
                </div>
                <h2 class="card-trip-pricing"><%= monument.price %>$</h2>
            </div>
          </div>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>



